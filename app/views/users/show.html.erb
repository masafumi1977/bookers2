<diV class = "error_explanation"><%= @user.errors.count %>errors prohibited this user from being saved:<br>
 <% @user.errors.full_messages.each do |message| %><br>
  <%= message %>
 <% end %>
<% end %>
</div>


<div class="container px-5 px-sm-0">
  <div class="row">
   <div class="col-md-3">
     <%= render 'users/info', user: @user %>
     <%= render 'books/list', book: @book %>
 </div>

 <div class="col-md-8 offset-md-1">
  <h2 class="mt-3">Books</h2>
   <table class="table table-hover table-inverse">
    <thead>
     <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
     </tr>
    </thead>
   <tbody>

 <% @books.each do |book| %>
 <tr>
  <td><%= link_to user_path(@user) do %>
     <%= attachment_image_tag @user, :profile_image, :fill, 60, format: 'jpeg', fallback: "no_image.jpg" %><br>
     <% end %></td>
  <td><%= link_to book.title, book_path(book.id) %></td>
  <td><%= book.body %></td>
 </tr>
 <% end %>
 </tbody>
 </table>
 </div>
 </div>
 </div>
