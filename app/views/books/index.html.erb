<% if @book.errors.any? %>
  <diV class = "error_explanation"><%= @book.errors.count %>errors prohibited this book from being saved:<br>
  <% @book.errors.full_messages.each do |message| %><br>
  <%= message %>
  <% end %>
<% end %>
</diV>

 <div class="container px-5 px-sm-0">
  <div class="row">
   <div class="col-md-3">
    <%= render 'users/info', user: @user %>
    <%= render 'books/list', book: @book %>
 </div>

 <div class="col-md-8 offset-md-1">
  <h2 class="mt-3">Books</h2>
   <table class="table table-hover table-inverse">
    <thead>
     <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
     </tr>
    </thead>
   <tbody>
 <% @books.each do |book| %>
 <tr>
  <td><%= link_to user_path(book.user) do %>
     <%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, format: 'jpeg', fallback: "no_image.jpg" %><br>
     <% end %></td>
  <td><%= link_to book.title, "/books/#{book.id}" %></td>
  <td><%= book.body %></td>
 </tr>
 <% end %>
 </tbody>
 </table>
 </div>
 </div>
 </div>